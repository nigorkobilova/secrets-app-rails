<%= form_tag(controller:"sessions", action: "create", method: "post") do %>
    <h1>Login</h1>
    <% if flash[:alert] %>
        <%= flash[:alert] %><br>
    <% end %>
    <label for="email">Email: <%= text_field_tag :email %> </label><br>
      <label for="password">Password: <%= password_field_tag :password %> </label><br>
    <%= submit_tag "Log In" %>
<% end %>